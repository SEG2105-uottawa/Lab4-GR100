<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="83dp" />

        <TextView
            android:id="@+id/teamiconselect"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Avatar Select"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="66dp" />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="301dp"
            android:layout_height="207dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            app:columnCount="3"
            app:rowCount="2">

            <ImageView
                android:id="@+id/teamicon1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="SetTeamIcon"
                android:src="@drawable/ic_logo_01" />

            <ImageView
                android:id="@+id/teamicon2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="SetTeamIcon"
                android:src="@drawable/ic_logo_02" />

            <ImageView
                android:id="@+id/teamicon3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="SetTeamIcon"
                android:src="@drawable/ic_logo_03" />

            <ImageView
                android:id="@+id/teamicon4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="SetTeamIcon"
                android:src="@drawable/ic_logo_04" />

            <ImageView
                android:id="@+id/teamicon5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="SetTeamIcon"
                android:src="@drawable/ic_logo_05" />

            <ImageView
                android:id="@+id/teamicon6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="SetTeamIcon"
                android:src="@drawable/ic_logo_00" />


        </androidx.gridlayout.widget.GridLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="66dp" />

        <Button
            android:id="@+id/loadfromphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="load_from_phone"
            android:text="Load from phone" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>